<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBE4F8"
    tools:context=".PlayWithPC">

    <TextView
        android:id="@+id/name"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:fontFamily="@font/baloo"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/computer"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/computer"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/baloo"
        android:text="computer"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="65dp"
        android:layout_height="46dp"
        android:fontFamily="@font/baloo"
        android:text="Score:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:fontFamily="@font/baloo"
        android:text="Score:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/computer"
        app:layout_constraintVertical_bias="0.061" />

    <ImageView
        android:id="@+id/myResul"
        android:layout_width="172dp"
        android:layout_height="172dp"
        android:layout_marginBottom="340dp"
        android:src="@drawable/inter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pcResult"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <ImageView
        android:id="@+id/pcResult"
        android:layout_width="172dp"
        android:layout_height="172dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="340dp"
        android:src="@drawable/inter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <ImageView
        android:id="@+id/rChoose"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_marginBottom="28dp"
        android:rotation="90"
        android:src="@drawable/rock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sChoose"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myResul"
        app:layout_constraintVertical_bias="0.35" />


    <ImageView
        android:id="@+id/sChoose"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/scissors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pChoose"
        app:layout_constraintTop_toBottomOf="@+id/myResul"
        app:layout_constraintVertical_bias="0.312" />

    <ImageView
        android:id="@+id/pChoose"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/paper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcResult"
        app:layout_constraintVertical_bias="0.312" />

    <TextView
        android:id="@+id/resulMessage"
        android:layout_width="310dp"
        android:layout_height="79dp"
        android:fontFamily="@font/baloo"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sChoose"
        app:layout_constraintVertical_bias="0.742" />

    <EditText
        android:id="@+id/personScore"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/myResul"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="0.603" />

    <EditText
        android:id="@+id/itScore"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/pcResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/computer"
        app:layout_constraintVertical_bias="0.604" />
</androidx.constraintlayout.widget.ConstraintLayout>